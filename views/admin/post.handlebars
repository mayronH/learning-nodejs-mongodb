<section class="section">
    <div class="card">
        <div class="card-content">
            <div class="content is-flex is-flex-direction-column is-justify-content-space-between">
                <div class="is-flex is-flex-direction-row is-justify-content-space-between">
                    <div class="is-flex is-flex-direction-column">
                        <h3 class="title is-5 is-capitalized mb-5">{{post.title}}</h3>
                        <small class="subtitle is-6 is-lowercase mb-2">{{post.slug}}</small>
                        <small class="">{{post.description}}</small>
                    </div>
                    <div>
                        <span class="tag is-primary is-light is-medium">{{post.category.name}}</span>
                    </div>
                </div>
                <div class="content py-3">
                    <p class="post-content">{{post.content}}</p>
                </div>
                <div class="has-text-right">
                    <time datetime="{{post.date}}">{{post.date}}</time>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <a href="/admin/posts/edit/{{post._id}}" class="card-footer-item p-0">
                <button class="button is-link">Editar</button>
            </a>
            <a href="/admin/posts/delete/{{post._id}}" class="card-footer-item p-0">
                <button class="button is-danger">Excluir</button>
            </a>
            <a class="card-footer-item p-0" onclick="window.history.back()">
                <button class="button is-link is-light">Voltar</button>
            </a>
        </div>
    </div>
</section>