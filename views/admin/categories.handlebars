<section class="section">
    <header class="mb-2">
        <h2 class="title is-4">Lista de Categorias</h2>
        <a href="/admin/categories/add"><button class="button is-primary">Nova Categoria</button></a>
    </header>
    <main class="columns is-multiline is-mobile">
        {{#each categories}}
            <div class="column">
                <div class="card">
                    <div class="card-content">
                        <div class="content is-flex is-flex-direction-column">
                            <h3 class="is-6">{{name}}</h3>
                            <small>{{slug}}</small>
                        </div>
                    </div>
                    <div class="card-footer is-justify-content-end px-2">
                        <div class="buttons are-small py-2">
                            <a href="/admin/categories/edit/{{_id}}">
                                <button class="button is-link mx-1">Editar</button>
                            </a>
                            <a href="/admin/categories/delete/{{_id}}">
                                <button class="button is-danger mx-1">Excluir</button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {{else}}
            <h3 class="title is-5 pt-5">Nenhuma categoria encontrada</h3>
        {{/each}}
    </main>
</section>