<section class="section">
    {{#each errors}}
        <div class="notification is-danger">
            <button class="delete"></button>
            {{text}}
        </div>
    {{else}}
    {{/each}}
    <h1 class="title is-4">Cadastrar Nova Conta</h1>
    <form action="/user/signup" class="box" method="post">
        <div class="field">
            <label class="label" for="name">Nome</label>
            <div class="control">
                <input class="input" type="text" id="name" name="name" placeholder="Seu nome" required />
            </div>
        </div>

        <div class="field">
            <label class="label" for="email">E-mail</label>
            <div class="control">
                <input class="input" type="email" id="email" name="email" placeholder="email@email.com" required />
            </div>
        </div>

        <div class="field">
            <label class="label" for="password">Senha</label>
            <div class="control">
                <input class="input" type="password" id="password" name="password" required />
            </div>
        </div>
        <div class="field">
            <label class="label" for="password2">Confirmar Senha</label>
            <div class="control">
                <input class="input" type="password" id="password2" name="password2" required />
            </div>
        </div>

        <div class="buttons is-grouped pt-5">
            <div class="control">
                <button class="button is-primary" type="submit">Registrar</button>
            </div>
            <div class="control">
                <button class="button is-danger is-light" type="button" onclick="window.history.back()">Cancelar</button>
            </div>
        </div>
    </form>
</section>